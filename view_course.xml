<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navbar_view_course"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_title_display_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/course_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_course_information"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/course_notes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_course_notes"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/delete_course_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_course_hold_to_activate"
            android:textColor="@color/red"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>