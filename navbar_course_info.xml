<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:foregroundTint="#FFEB3B"
    android:title="@string/app_name"
    app:titleTextColor="#8C0E0E">

    <TextView
        android:id="@+id/course_info_title"
        style="@style/font_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/course_info_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="18dp"
        android:src="@drawable/back_icon" />

    <ImageView
        android:id="@+id/add_syllabus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="18dp"
        android:src="@drawable/add_course_icon" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="18dp"
        android:indeterminateTint="#F89F00"
        android:progressDrawable="@color/black"/>



</androidx.appcompat.widget.Toolbar>