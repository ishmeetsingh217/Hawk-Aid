<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navbar_add_course"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="48dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="@string/add_course_directions"
            android:textColor="@color/hint_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_the_course"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/course_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="@string/maximum_of_64_characters"
            android:inputType="text"
            android:maxLength="64"
            android:backgroundTint="@color/text_input_bar_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/course_code_input"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/course_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:hint="@string/maximum_of_12_characters"
            android:inputType="text"
            android:maxLength="12"
            android:backgroundTint="@color/text_input_bar_color"/>

        <Button
            android:id="@+id/save_subject_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_course_entry"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>