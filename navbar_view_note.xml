<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/app_name"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:elevation="4dp">

    <TextView
        android:id="@+id/note_view_title_disp"
        style="@style/font_header"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@color/note_title_color"/>

    <ImageView
        android:id="@+id/note_view_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_gravity="end"
        android:src="@drawable/back_icon"/>

    <ImageView
        android:id="@+id/note_edit_button"
        android:tag="edit_mode_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_gravity="end"
        android:src="@drawable/edit_icon"/>

    <ImageView
        android:id="@+id/note_view_menu_button"
        android:tag="edit_mode_off"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_gravity="end"
        android:src="@drawable/menu_icon"/>

</androidx.appcompat.widget.Toolbar>